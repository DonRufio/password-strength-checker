{
  "manifest_version": 3,
  "name": "Password Strength Checker",
  "version": "1.0",
  "description": "A robust password strength checker",
  "action": {
    "default_popup": "public/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
